{
  "conventionalCommits.scopes": ["be", "fe"],
  "editor.defaultFormatter": "esbenp.prettier-vscode",
  "editor.formatOnSave": true,
  "editor.guides.bracketPairs": true,
  "editor.inlineSuggest.syntaxHighlightingEnabled": true,
  "highlight-matching-tag.highlightFromContent": true,
  "highlight-matching-tag.highlightSelfClosing": true,
  "highlight-matching-tag.styles": {
    "closing": {
      "left": {
        "underline": "yellow"
      },
      "name": {
        "surround": "yellow",
        "underline": "yellow"
      },
      "right": {
        "underline": "yellow"
      }
    },
    "opening": {
      "left": {
        "underline": "yellow"
      },
      "name": {
        "surround": "yellow",
        "underline": "yellow"
      },
      "right": {
        "underline": "yellow"
      }
    }
  },
  "javascript.updateImportsOnFileMove.enabled": "always",
  "nxConsole.generateAiAgentRules": true,
  "workbench.tree.indent": 15,
  "workbench.tree.renderIndentGuides": "always",
  "conventionalCommits.gitmoji": false,
  "conventionalCommits.promptBody": false,
  "conventionalCommits.promptFooter": false,
  "cSpell.words": ["caramellatte", "commitlint", "gsap", "iconify", "primeicons", "primereact", "ptag", "shadcn", "Showtimes", "sonner"]
}
